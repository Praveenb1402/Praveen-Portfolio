{
  "compilerOptions": {
    "jsx": "react-jsx",         // This tells TypeScript to support JSX
    "module": "ESNext",         // Recommended for React
    "moduleResolution": "Node", // Important for path resolution
    "target": "ES6",            // Or higher
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}